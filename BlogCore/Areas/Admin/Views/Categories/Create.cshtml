@model BlogCore.Models.Category

@{
    ViewData["Title"] = "Crear categoria";
}

<br />
<br />

<h3 class="text-center"> Crear uan nueva categoria</h3>

<form method="post" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <label asp-for="Name"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Ingrese nombre de categoria" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
      

        <div class="form-group row">
            <div class="col-4">
                    <label class="col-4">
                        <label asp-for="OrderNumber"></label>
                    </label>
            </div>
            <div class="col-8">
                    <input asp-for="OrderNumber" class="form-control" placeholder="Ingrese el orden" />
                    <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8">
                <partial name="_ViewCreateBack" />
            </div>
        </div>
        </div>
    </div>

</form>